<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:background="@drawable/selector_row">

    <ImageView
        android:id="@+id/image_user_profile"
        android:background="@drawable/circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/profile_picture"
        android:layout_width="53sp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:text="@string/sample_user"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/image_user_profile"
        app:layout_constraintTop_toBottomOf="parent" />

    <!-- A horizontal line between the friends -->
    <View
        android:id="@+id/dividing_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#ff8f00"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/image_user_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>